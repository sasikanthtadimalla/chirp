<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chirp | Connect Like Never Before</title>
    <!-- favicon -->
    <link rel="icon" href="images/favicon.ico">
    <!-- bootstrap css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- bootstrap js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <!-- font awesome icons -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <!-- jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <!-- custom css -->
    <link rel="stylesheet" href="css/common.css">
    <link rel="stylesheet" href="css/feed.css">  
  </head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/feed"><img class="logo" src="images/logo.png"> <span>Chirp</span></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" href="/feed">Feed</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/friends">Friends</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/profile">Profile</a>
          </li>
          <li class="nav-item nav-item-last">
            <a class="nav-link" href="/">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <section id="search-section">
    <form action="/search" method="POST">
      <div class="input-group mb-3 search-bar">      
        <input type="search" name="personName" class="form-control" placeholder="Search for people ...">        
      </div>  
    </form>
  </section>

  <% posts.forEach((post) => { %>
    <section id="feed-section">
      <div class="container-fluid post-div">
        <div class="row title-div">
  
          <div class="col-md-3 img-div">
            <img class="photo" src="images/samplePhoto.jpg" alt="">
          </div>
          <div class="col-md-9 name-div">
            <div>
              <h3><%= fullName %>></h3>
              <p><%= post.time %></p>
            </div>
          </div>
  
        </div>
        <div class="row content-div">
          <h4 class="post-title"><%= post.title %></h4>
          <p class="post-content"><%= post.body %></p>
        </div>
      </div>
    </section>
  <% }) %>

</body>
</html>