<body>
  <section>
    <div class="container-fluid">      
      <div class="row">

        <div class="col-md-6 intro">
          <div>
            <img src="images/logo.png">
            <h1>Welcome to Chirp</h1>
            <h4>Connect like never before</h4>
          </div>          
        </div>

        <div class="col-md-6 signup">         
          
          <div class="card">
            <h4>Sign Up</h4>            
            <div class="card-body">
              <form action="/signup" method="POST">
                <div class="input-group flex-nowrap">
                  <span class="input-group-text" id="addon-wrapping"> <i class="fas fa-user-alt"></i> </span>
                  <input required type="text" name="name" class="form-control" placeholder="Full name" autocomplete="no">
                </div>
                <div class="input-group flex-nowrap">
                  <span class="input-group-text" id="addon-wrapping"> <i class="fas fa-at"></i> </span>
                  <input required type="email" name="email" class="form-control" placeholder="Email" autocomplete="no">
                </div>
                <div class="input-group flex-nowrap">
                  <span class="input-group-text" id="addon-wrapping"> <i class="fas fa-lock"></i> </span>
                  <input required type="password" name="password" class="form-control" placeholder="Password" autocomplete="no">
                </div>
                <button type="submit" class="btn rounded-pill">Join</button>
                <p>(No T&C and other B.S.)</p>
                <p>Have an account? <a href="/">Sign In.</a></p>
              </form>
            </div>
          </div>
          
        </div>

      </div>
    </div>
  </section>
